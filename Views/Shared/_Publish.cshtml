@model ProjectFirstSteps.Models.MakingPublications

	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h4>MakingPublications</h4>
                <hr />
            </div>

			<div class="modal-body">
				<div class="row">
                    <div class="col-md-12">
                      <form asp-action="Create" asp-controller="MakingPublications">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="message.libelle" class="control-label"></label>
                            <textarea asp-for="message.libelle" class="form-control"></textarea>
                            <span asp-validation-for="message.libelle" class="text-danger"></span>

                            <input type="hidden" asp-for="message.nomRessource" class="form-control" value="Messages" />
                            <span asp-validation-for="message.nomRessource" class="text-danger"></span>
                        
                        </div>
                        <div class="form-group">
                            <label asp-for="lien.Url" class="control-label"></label>
                            <input type="url" asp-for="lien.Url" class="form-control" />
                            <span asp-validation-for="lien.Url" class="text-danger"></span>

                            <input type="hidden" asp-for="lien.nomRessource" class="form-control" value="Url" />
                            <span asp-validation-for="lien.nomRessource" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="photoVideo.taille" class="control-label"></label>
                            <input asp-for="photoVideo.taille" class="form-control" />
                            <span asp-validation-for="photoVideo.taille" class="text-danger"></span>
                        </div>
                        @*<div class="form-group">
                            <label asp-for="publication.Membre" class="control-label"></label>
                            <input type="hidden" asp-for="publication.Membre" class="form-control" />
                            <span asp-validation-for="publication.Membre" class="text-danger"></span>
                        </div>*@
                        
                        @*<div class="form-group">
                            <label asp-for="publication.dateDePublication" class="control-label"></label>
