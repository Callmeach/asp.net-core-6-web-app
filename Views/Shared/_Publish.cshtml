                            <span asp-validation-for="publication.dateDePublication" class="text-danger"></span>
                        </div>*@
                        <div class="form-group">
                            <label asp-for="photoVideo.formFile" class="control-label"></label>
                            <input asp-for="photoVideo.formFile" type="file" multiple class="form-control" />
                            <span asp-validation-for="photoVideo.formFile" class="text-danger"></span>

                            
                            <input type="hidden" asp-for="photoVideo.nomRessource" class="form-control" value="photoVideo" />
                            <span asp-validation-for="photoVideo.nomRessource" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                      </form>  
                    </div>
                </div>
			</div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    
                </div>
            

			
		</div>
	</div>








