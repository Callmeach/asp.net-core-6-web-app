@model IEnumerable<ProjectFirstSteps.Models.Membre>

@{
    ViewData["Title"] = "Amis";
    Layout = "~/Views/Shared/_LayoutAmis.cshtml";
}


					<hr />
						<table class="table">
							<thead>
								<tr>
									<th>
										@Html.DisplayNameFor(model => model.Nom)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.Prenom)
									</th>
									<th>
										@Html.DisplayNameFor(model => model.Email)
									</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
						@if (Model.Count() != 0)
						{
							@foreach (var item in Model) {
									<tr>
                
										<td>
											@Html.DisplayFor(modelItem => item.Nom)
										</td>
										<td>
											@Html.DisplayFor(modelItem => item.Prenom)
										</td>
										<td>
											@Html.DisplayFor(modelItem => item.Email)
										</td>
										<td>
											<a asp-action="Edit" asp-route-email="@item.Email">Edit</a> |
											<a asp-action="Details" asp-route-email="@item.Email">Details</a> |
											<a asp-action="Remove" asp-route-email="@item.Email">Retirer</a> |
											<a asp-controller="Chats" asp-action="PrivateChat" asp-route-email="@item.Email">Message</a>
										</td>
                
									</tr>
							}

						}
						@if(Model.Count() == 0)
						{
							<script>
								alert("Aucun élément trouvé");
							</script>
						}
							</tbody>
						</table>
