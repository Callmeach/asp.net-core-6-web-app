@model IEnumerable<ProjectFirstSteps.Models.Membre>


@{
    ViewData["Title"] = "Admin Page";
}

<div class="left">
					<a asp-action="MesPublications" asp-controller="Membres" class="profile">
						<div class="profile-picture">
							<img src="~/Medias/Images/PhotoProfil/pic1.png" alt="">
						</div>
						<div class="handle">
							<h4>@User.Identity.Name</h4>
							<p class="text-muted">
								@Context.Session.GetString("email")
							</p>
						</div>
					</a>

					<div class="sidebar">
						<a class="menu-item active">
							<span><i class="uil uil-sign-in-alt"></i></span><h3>Inscriptions en attente</h3>
						</a>
						<a class="menu-item" asp-action="Index" asp-controller="Membres">
							<span><i class="uil uil-users-alt"></i></span><h3>Liste des membres</h3>
						</a>
						<a class="menu-item" asp-action="ComptesABloquer" asp-controller="Membres">
							<span><i class="uil uil-trash-alt"></i></span><h3>Comptes à supprimer</h3>
						</a>
						
						<a class="menu-item" id="theme">
							<span><i class="uil uil-palette"></i></span><h3>Theme</h3>
						</a>
						<a class="menu-item">
							<span><i class="uil uil-setting"></i></span><h3>Settings</h3>
						</a>
					</div>
				</div>
				<div class="middle">
					<div class=feeds>
						<div class="feed">
							<table class="table">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nom)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Prenom)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model) {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nom)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Prenom)
                                            </td>
                                            <td>
                                                <a class="btn btn-success" asp-action="ValiderInscription" asp-controller="Membres" asp-route-id="@item.Email">Valider</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
						</div>
					</div>
				</div>