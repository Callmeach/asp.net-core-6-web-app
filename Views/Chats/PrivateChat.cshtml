@model IEnumerable<ProjectFirstSteps.Models.Chat>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MailMembre1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MessageDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Containt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @{
                        if (ViewData["thisUser"].Equals(item.MailMembre1))
                        {
                            @Html.ViewData["Membre1"];
                        }
                        else
                        {
                            @Html.ViewData["Membre2"];
                        }
                    }
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Containt)
            </td>
            <td>
               <!-- <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | --> 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>









